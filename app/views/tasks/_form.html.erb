<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <% if @task.id.present? %>
    <div class="field">
      <%= f.label :completed_at %><br />
      <%= f.datetime_select :completed_at %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :parent %> <br />
    <%= f.select :parent, options_for_select(Task.all.collect{ |task| [task.id, task.name] }), :include_blank => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
